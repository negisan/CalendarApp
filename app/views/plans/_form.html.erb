<div class="mt-5">
  <%= form_with model: object, local: true do |f| %>
    <%= f.label :start_time, Plan.human_attribute_name(:start_time) %>
    <div class="form-group">
      <%= f.date_select :start_time %>
    </div>
    <div class="form-group">
      <%= f.label :label, Plan.human_attribute_name(:label) %>
      <%= f.text_field :label, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :detail, Plan.human_attribute_name(:detail) %>
      <%= f.text_area :detail, class: 'form-control' %>
    </div>
    <div class="nav justify-content-end mt-3">
      <%= f.submit '保存する', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>